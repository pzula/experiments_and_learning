<h1><%= pluralize(@movies.size, 'Movie') %> </h1>
 

<% @movies.each do |movie| %>
  <article>
    <header>
      <h2><%= link_to movie.title, movie %></h2>
    </header>
    <p>
      <%= movie.description %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_price(movie) %>
      </tr>
      <tr>
        <th>Cast</th>
        <td><%= movie.cast %></td>
      </tr>
      <tr>
        <th>Director</th>
        <td><%= movie.director %></td>
      </tr>
    </table>
  </article>
<% end %>

