<h1><%= pluralize(@events.size, 'Event') %> </h1>

<% @events.each do |event| %>
<article>
	
	<header><h2> <%= event.name %> </h2></header>
		<p><%= truncate(event.description, :length => 35, seperator: ' ') %></p>
		<p><strong>Where:</strong> <%= event.location %></p>
		<p><strong>Price:</strong> <%= number_to_currency(event.price) %> %>
		</p>
		<p><strong>When:</strong> <%= event.starts_at %></p>

</article>
<% end %>